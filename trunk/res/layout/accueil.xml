<?xml version="1.0" encoding="utf-8"?>

<AbsoluteLayout
	android:id="@+id/AbsoluteLayout01" 
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent" 
	xmlns:android="http://schemas.android.com/apk/res/android">
	
	<TableLayout 
		android:layout_height="fill_parent" 
		android:id="@+id/TableLayout01" 
		android:layout_width="fill_parent" >
	
			<TextView 
				android:textSize="35dp"
				android:layout_height="wrap_content" 
				android:layout_width="wrap_content" 
				android:id="@+id/TextView01" 
				android:text="Labyrinthe" 
				android:gravity="center"
				android:layout_marginTop="10dip"
				android:layout_marginBottom="90dip"
			>
			</TextView>


		<TableRow 
			android:layout_height="wrap_content" 
			android:layout_y="226dip" 
			android:layout_width="wrap_content" 
			android:layout_x="170dip" 
			android:id="@+id/TableRow02"
			android:gravity="center">
			
			<Button
				android:id="@+id/nouvelle"
				android:textSize="21sp" 
				android:text="Nouvelle Partie" 
			    android:layout_width="130dp"
			    android:layout_height="100dp"/>
			<Button
				android:id="@+id/charger"
				android:textSize="21sp" 
				android:text="Charger Partie" 
			    android:layout_width="130dp"
			    android:layout_height="100dp"
		    />
		</TableRow>
		<TableRow android:gravity="center">
			
			<Button
				android:id="@+id/apropos"
				android:textSize="21sp" 
				android:text="A propos" 
			    android:layout_width="130dp"
			    android:layout_height="100dp"
			    android:gravity="center"/>
		<Button android:textSize="21sp" android:id="@+id/quitter" android:text="Quitter" android:layout_width="130dp" android:layout_height="100dp" android:gravity="center" /></TableRow>
	
		
		
	</TableLayout>
</AbsoluteLayout>
